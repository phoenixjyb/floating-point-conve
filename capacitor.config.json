{
  "appId": "com.dataconvert.app",
  "appName": "Data Conversion App",
  "webDir": "dist",
  "server": {
    "androidScheme": "https"
  },
  "android": {
    "allowMixedContent": true,
    "webContentsDebuggingEnabled": true
  },
